{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@hooks/*": [
        ".lib//hooks/*"
      ],
      "@store/*": [
        "./lib/store/*"
      ],
      "@services/*": [
        "./lib/services/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
